<!DOCTYPE html>
<html>
  <head>
    <title>Movie Night</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <link href="https://fonts.googleapis.com/css2?family=Amatic+SC:wght@700&family=Chivo:ital@1&display=swap" rel="stylesheet">
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <nav class="log-nav">
        <% if @current_user.present? %>
          <%= link_to "Log out #{@current_user.name}", login_path, :method => 'delete' %>
        <% else %>
          <%= link_to 'Sign up', new_user_path %>

          <%= link_to 'Log in', login_path %>
        <% end %>
      </nav>
      <h1 class="title-all">
        MOVIE NIGHT DB
      </h1>
      <nav class="selection-nav">
        <%= link_to 'Home', '/' %>
        ||
        <%= link_to 'Movies', movies_path %>
        ||
        <%= link_to 'Actors', actors_path %>
        ||
        <%= link_to 'Directors', directors_path %>
        ||
        <%= link_to 'Genres', genres_path %>

        <% if @current_user.present? %>
          ||
          <%= link_to 'favourites', favourites_path %>
        <% end %>
      </nav>
    </header>
    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
